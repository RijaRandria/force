{% extends "maitre.twig" %}
{% block title %}Identification{% endblock %}
{% block content %}
<section class="login-block">
    <div class="container">
        <div class="row">
            <div class="col-md-12 login-sec">
                <br/><br/>
                <h2 class="text-center">Identification</h2>
                <form class="login-form" id="auth" role="form" method="POST" action="{{ path_for('verifauth') }}">
                    <div class="form-group">
                        <label for="login" class="text-uppercase">Utilisateur</label>
                        <input type="text" name="login" class="form-control" placeholder="Votre identifiant">
                    </div>
                    <div class="form-group">
                        <label for="pword" class="text-uppercase">Mot de passe</label>
                        <input type="password" name="pword" class="form-control" placeholder="Votre mot de passe">
                    </div>
                    <div class="form-check text-center">
                        <button type="submit" class="btn btn-primary">Valider</button>
                        <a href="{{ path_for('home') }}" class="btn btn-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
{% endblock %}
{% block scripts %}
{% endblock %}
