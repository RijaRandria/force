                                                        <input type="radio" id="radio1" name="inscrit" value="1" checked>
                                                        <label  for="radio1">OUI</label>
                                                      </div>  
                                                      <div class ="fond toolbar1" style =" display : flex">
                                                        <input type = "radio" name ="inscrit" id = "radio2" value ="0" > 
                                                        <label  for="radio2">NON</label>
                                                      </div>
                                                  
                                                   {% elseif cqp.inscrit == 0 %}

                                                    <div class ="fond toolbar " style =" display : flex">

                                                        <input type = "radio" name ="inscrit" id = "radio3" value =1  >
                                                        <label  for="radio3">OUI</label>
                                                    </div>    
                                                    <div class ="fond toolbar1 " style =" display : flex">    
                                                        <input type = "radio" name ="inscrit" id = "radio4" value =0 checked>
                                                        <label  for="radio4">NON</label>
                                                    </div>
                                                 {% else %}
