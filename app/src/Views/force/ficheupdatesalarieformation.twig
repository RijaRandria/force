                                                    </div>

                                                  {% endif %}

                                                </div>
                                            </br>  
                                            <label>Si non, le motif</label>  
                                            </br>
                                              <input type ="text" size = "50" name ="motifnon" value = {{cqp.motifnon}}    > </input>
                                              </br>
                                              <label>Nombre d'heures effectuées</label>  
                                              </br>  
                                              <input type= "number" size = "4"name ="nbheures" value = {{cqp.nbheures}} ></input>
                                              </br> 
                                              <label>Validation</label>  
                                               <div class ="border border-5 border-success  "  style =" display : flex; width : 110px;margin-left : 15px ">
                                                  {% if cqp.inscrit == 1 %}
                                            
                                                      <div class ="fond toolbar " style =" display : flex">

                                                        <input type="radio" id="valid1" name="validation" value="1" checked>
                                                        <label  for="valid1">OUI</label>
                                                      </div>  
                                                      <div class ="fond toolbar1" style =" display : flex">
                                                        <input type = "radio" name ="validation" id = "valid2" value ="0" > 
                                                        <label  for="valid2">NON</label>
                                                      </div>
                                                  
                                                   {% elseif cqp.inscrit == 0 %}

                                                    <div class ="fond toolbar " style =" display : flex">

                                                        <input type = "radio" name ="validation" id = "valid3" value =1  >
                                                        <label  for="valid3">OUI</label>
                                                    </div>    
                                                    <div class ="fond toolbar1 " style =" display : flex">    
                                                        <input type = "radio" name ="validation" id = "valid4" value =0 checked>
                                                        <label  for="valid4">NON</label>
                                                    </div>
                                                 {% else %}
                                                    <div class ="fond toolbar " style =" display : flex">

                                                        <input type = "radio" name ="validation" id = "valid5" value =1 > 
                                                        <label  for="valid5">OUI</label>
                                                    </div>    
                                                    <div class ="fond toolbar1 " style =" display : flex">                                            
                                                          <input type = "radio" name ="validation" id = "valid6" value =0 > 
                                                        <label  for="valid6">NON</label>
                                                    </div>

                                                  {% endif %}

                                                </div>

                                               <label>Date du jury</label>  
                                              </br>  
                                              <input type= "date" name ="datejury" value = {{cqp.datejury}} placeholder = "{{cqp.datejury}}"></input>
                                              </br>
                                                <label>Observation </label>  
                                            </br>
                                              <input type ="text" size ="50"name ="observation" value = {{cqp.observation}} > </input>
                                              </br>
                                              </br>
                                          {% endfor %}
                                       
                                      </div>
                                       </br>

                                                                   

                                  </div>

                              </div>
                          </div>
                      </div>
                   </section>
                  </br>
                <button type="submit" class="btn btn-success" style =" margin-left : 75px">Valider</button>&nbsp;&nbsp;
                <a href="{{ path_for('salarie')}}" class="btn btn-secondary">Annuler</a>
               
                <!--<a href="{{ path_for('home')}}" class="btn btn-success">Démarches</a>-->
              </form>
        
             
              </div>
  
               

              <!-- /col-md-6 -->
                    <!-- /OVERVIEW -->
            </div>
                  <!-- /tab-pane -->
          </div>
                <!-- /tab-content -->
        </div>
