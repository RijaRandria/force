{% extends "maitre.twig" %}
{% block content %}
<div class="container text-center">
  <h3 ><i class="fa fa-book"></i>&nbsp;Liste des pièces d'identité&nbsp;
    <a class="btn btn-outline-success btn-sm" href="{{path_for('newidentite')}}"><i class="fa fa-copy"></i>&nbsp;Nouvelle pièce</a>
  </h3>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Titre</th>
    </tr>
  </thead>
  <tbody>
    {% for titre in titres %}
      <tr>
        <td> {{titre.idtitre}}   </td>
        <td> {{titre.titre}}</td>
      </tr>
    {% endfor %}

  </tbody>
</table>
{% endblock %}
{# Exemple RouterJS #}
{% block javascript %}
  {{ parent() }}
{% endblock %}
