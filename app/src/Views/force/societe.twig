</div>
<div  style ="width : 1620px, ">
          <!-- page start-->
          <div >
             <div class="scroller adv-table table-responsive -xl} ">
                <table id = "etable" class ="table table-striped table-bordered " >
                <!--<table>-->
                  <thead class=" thead-dark centre" >
                      
                          <tr class="table-dark" style ="width : 100%; height : 50%; " >
                          
                            <th scope="col " >Entreprise</th>
                            <th scope="col " >Siret</th>
                            <th scope="col " >Contact</th>
                            <th scope="col " >Activité</th>
                            <th scope="col " >Localisation</th>
                            <th scope="col " >Salarié Accueilli</th>
                            <th scope="col " >Chantier</th>
                            <th scope="col " >Date Début / </br>Fin</th>
                            <th scope="col " >Durée</br>(Semaines)</th>
                          
                          </tr>

                  </thead>
                  <tbody >
                    {% for lige in liges %}
                      {% if lige.entreprise %}
                      <tr>
                          <td class=" centre">{{lige.entreprise|trim}}</td>
                          <td class=" centre">{{lige.siret|trim}}</td>
                          <td class=" centre">{{lige.contactpmsmp|trim}}</br>{{lige.mail|trim}}</br>{{lige.telephone|trim}}</td>
                          <td class=" centre">{{lige.activite|trim}}</td>
                          <td class=" centre">{{lige.ville|trim}}</br>dpt : {{lige.departement|trim}}</td> 
                          <td class=" centre">{{lige.nom|trim}}</br>{{lige.prenom|trim}}</td>
                          <td>{{lige.lieu|trim}}</td>
                          <td class=" centre">{{lige.datedeb|date("d/m/Y", "Europe/Paris")}}</br>{{lige.datefin|date("d/m/Y", "Europe/Paris")}}</td>
                          {% set semaine = lige.nbheures / 35 %}
                          <td class=" centre">{{semaine|round(2,'floor')}}</td>
                      </tr>
                      {% endif %}
                    {% endfor %}  
                  </tbody>  
                </table>
            </div>
          </div>
</div>
<!--</div>-->
{% endblock %}

