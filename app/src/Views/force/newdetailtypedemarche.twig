                    {% endfor %}

                  </br></br></br>
                    <input type="text" class="form-control" name="detailtypedemarche" id="detailtypedemarche" placeholder="Nouveau détail type de démarche"></input>
                    {{csrf()}}

                  <button type="submit" class="btn btn-primary">Valider</button>&nbsp;&nbsp;
                  <a href="{{ path_for('home')}}" class="btn btn-secondary">Annuler</a>
                </form>
            </div>
        </div>
    </div>
</div>
</section>
