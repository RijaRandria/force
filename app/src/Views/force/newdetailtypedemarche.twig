{% extends "maitre.twig" %}
{% block title %}{{titre}}{% endblock %}
{% block content %}
<section>
<div id="login-page">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <br/>
                <h2 class="text-center">{{titre}}</h2>
                <form  method="POST" onSubmit="return accepter()" action="{{ path_for('insertdetailtypedemarche') }}">

                    <label for="typesortie"><b>Nouveau Détail type de démarche</b></label></br>
                    {% for demarche in demarches %}
