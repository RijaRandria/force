{% extends "maitre.twig" %}
{% block content %}
<div class="container text-center">
  <h3 ><i class="fa fa-book"></i>&nbsp;Liste des motifs de sortie&nbsp;
    <a class="btn btn-outline-success btn-sm" href="{{path_for('newmotif')}}"><i class="fa fa-copy"></i>&nbsp;Nouveau motif de sortie</a>
  </h3>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Motif de sortie</th>
    </tr>
  </thead>
  <tbody>
    {% for ligne in lignes %}
      <tr>
        <td> {{ligne.idmotif}}   </td>
        <td> {{ligne.motifsortie}}</td>
      </tr>
    {% endfor %}

  </tbody>
</table>
{% endblock %}
{# Exemple RouterJS #}
{% block javascript %}
  {{ parent() }}
{% endblock %}
