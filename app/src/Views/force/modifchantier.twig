        color : white;
      }
    
   
</style>
<section>
<div id="login-page">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <br/>
                <h2 class="text-center">{{titre}}</h2>
                <form class="form-login" method="POST" onSubmit="return accepter()" action="{{ path_for('insertmodifchantier') }}">

                  {% for ligne in lignes %}
                        <input type="hidden" class="form-control" name="idlieu" id="idlieu"  value = "{{ligne.idlieu}}"></input>
                        <div class="form-group">
                          <label for="chantier">Chantier</label>
                          <input type="text" class="form-control" name="chantier" id="chantier"  value = "{{ligne.lieu}}"></input>
                          <label for="encadrant">Chantier FSE : </label>
                          {% if ligne.fse > 0 %}
                                <div class="col-sm-12">
                                  <div class ="border border-5 border-success  "  style =" display : flex; width : 110px;margin-left : 15px ">
                                        <div class ="fond toolbar" style =" display : flex">
                                            <input type="radio" id="radio1" name="fse" value= "1" checked>
                                            <label class =" sw-right" for="radio1">OUI</label>
                                        </div> 
                                        <div class ="fond toolbar1" style =" display : flex">   
                                            <input type = "radio" name ="fse" id = "radio2" value ="0" > 
                                            <label class =" sw-left" for="radio2">NON</label>
                                        </div>
                                    </div>  
                                </div>
                                
                          {% else %}
                                <div class="col-sm-12">
                                  <div class ="border border-5 border-success  "  style =" display : flex; width : 110px;margin-left : 15px ">
                                        <div class ="fond toolbar" style =" display : flex">
                                            <input type="radio" id="radio1" name="fse" value= "1" >
                                            <label class =" sw-right" for="radio1">OUI</label>
                                        </div> 
                                        <div class ="fond toolbar1" style =" display : flex">   
                                            <input type = "radio" name ="fse" id = "radio2" value ="0" checked> 
                                            <label class =" sw-left" for="radio2">NON</label>
                                        </div>
                                    </div>  
                                </div>
                          {% endif %}
                        </div>
                        <div class="form-group">
                          <label for="encadrant">Encadrant</label>
                          <input type="text" class="form-control" name="encadrant" id =" encadrant" value="{{ligne.encadrant}}">
                        </div>
                        <div class="form-group">
                          <label for="dpt">Département</label>
                          <input type="text" class="form-control" name="departement" id =" departement" value="{{ligne.dpt}}">
                        </div>
                           <div class="form-group">
                          <label for="contratinitial">Contrat Initial</label>
                          <input type="text" class="form-control" name="contratinitial" id =" contratinitial" value="{{ligne.contratinitial}}">
                        </div>
                        <div class="form-group">
                          <label for="smic">SMIC</label>
                          <input type="text" class="form-control" name="smic" id =" smic" value="{{ligne.smic}}">
                        </div>
                        <div class="form-group">
                          <label for="essai">Période d'essai</label>
                          <input type="text" class="form-control" name="essai" id =" essai" value="{{ligne.essai}}">
                        </div>
                  {% endfor %}
                    {{csrf()}}
                  <button type="submit" class="btn btn-primary">Valider</button>&nbsp;&nbsp;
                  <a href="{{ path_for('lieu')}}" class="btn btn-secondary">Annuler</a>
                </form>
            </div>
        </div>
    </div>
</div>
</section>
